<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    android:weightSum="1">

    <TextView
        android:id="@+id/tv_author_name"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_text_post_item"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@+id/tv_author_name"
        android:layout_height="15dp"
        android:text="text"
        android:textSize="10sp" />

    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/tv_author_name"
        android:layout_weight="0.03"
        android:id="@+id/btn_play"
        android:background="@color/colorWhite"
        android:drawableLeft="@android:drawable/ic_media_play"
        android:padding="0.1dp"/>

    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/tv_author_name"
        android:layout_toRightOf="@+id/btn_play"
        android:layout_weight="0.03"
        android:id="@+id/btn_pause"
        android:background="@color/colorWhite"
        android:drawableLeft="@android:drawable/ic_media_pause"
        android:padding="0.1dp"/>

    <TextView
        android:id="@+id/tv_recycler_item"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@+id/btn_pause"
        android:layout_height="15dp"
        android:textSize="10sp" />

    <CheckBox
        android:id="@+id/checkBox_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CheckBox"
        android:layout_below="@+id/tv_recycler_item"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="52dp"
        android:layout_marginEnd="52dp" />

    <TextView
        android:id="@+id/tv_likes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_recycler_item"
        android:layout_alignLeft="@+id/checkBox_like"
        android:layout_alignStart="@+id/checkBox_like"
        android:layout_marginLeft="100dp"
        android:layout_marginStart="100dp"
        android:text="likes" />

    <Button
        android:id="@+id/btn_repost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Repost"
        android:textSize="10sp"
        android:layout_below="@+id/checkBox_like"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@color/colorWhite"
        android:drawableLeft="@drawable/ic_compare_arrows_black_24dp"
        android:padding="0.1dp"/>

</RelativeLayout>