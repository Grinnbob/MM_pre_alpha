<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mycompany.grifon.mm_pre_alpha.ui.AddSongToPostActivity">

    <Button
        android:id="@+id/btn_add_post_2"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:textSize="10sp"
        android:layout_weight="0.01"
        android:background="@color/colorWhite"
        android:drawableLeft="@drawable/ic_add_black_18dp"
        android:padding="0.1dp"
        android:text="add"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/et_postText_2"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:hint="enter your comments"
        android:textSize="10dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/btn_add_post_2"
        android:layout_toEndOf="@+id/btn_add_post_2" />

    <TextView
        android:id="@+id/tv_song_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_postText_2"
        android:layout_toEndOf="@+id/btn_add_post_2"
        android:layout_toRightOf="@+id/btn_add_post_2" />

</RelativeLayout>
