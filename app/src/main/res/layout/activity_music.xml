<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mycompany.grifon.mm_pre_alpha.MusicActivity">

    <include layout="@layout/toolbar" />


    <Button
        android:id="@+id/add"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:textSize="10sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="9dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="61dp"
        android:layout_weight="0.01"
        android:text="Play" />

    <Button
        android:id="@+id/btn_search_music"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:textSize="10sp"
        android:text="search"
        android:layout_alignTop="@+id/add"
        android:layout_toRightOf="@+id/add" />

    <EditText
        android:id="@+id/et_search"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/btn_search_music"
        android:layout_toRightOf="@+id/btn_search_music"
        android:layout_toEndOf="@+id/btn_search_music"
        android:hint="search"
        android:textSize="10dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_below="@+id/add"
        android:scrollbars="none"/>

</RelativeLayout>