<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include android:id="@+id/toolbar" layout="@layout/toolbar" />

    <ImageView
        android:id="@+id/iv_user_avatar"
        android:layout_width="67dp"
        android:layout_height="80dp"
        android:layout_below="@id/toolbar"
        android:contentDescription="@null"
        android:src="@drawable/ic_account_circle_black_48dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="67dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/iv_user_avatar"
        tools:text="User name"/>





    <!---->

    <TextView
        android:id="@+id/tv_subscribers"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toEndOf="@id/iv_user_avatar"
        tools:text="subscribers"/>


    <TextView
        android:id="@+id/tv_number_of_subscribers_value"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toEndOf="@id/tv_subscribers"
        tools:text="0"/>

    <TextView
        android:id="@+id/tv_subscriptions"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_subscribers"
        app:layout_constraintStart_toEndOf="@id/iv_user_avatar"
        tools:text="subscriptions"/>


    <TextView
        android:id="@+id/tv_number_of_subscriptions_value"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_number_of_subscribers_value"
        app:layout_constraintStart_toEndOf="@id/tv_subscriptions"
        tools:text="0"/>

    <!---->

    <TextView
        android:id="@+id/tv_subscribe_me"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_subscriptions"
        app:layout_constraintStart_toEndOf="@id/iv_user_avatar"
        tools:text="subscribe"/>

    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toBottomOf="@id/tv_subscriptions"
        app:layout_constraintStart_toEndOf="@id/tv_subscribe_me"/>









    <Button
        android:id="@+id/chatButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@color/colorWhite"
        android:textSize="12sp"
        android:drawableStart="@drawable/ic_message_black_18dp"
        tools:text="chat"/>

    <TextView
        android:id="@+id/tv_same_songs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Music identity "/>

    <TextView
        android:id="@+id/tv_number_of_the_same_songs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        tools:text="0%"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="false"
        android:max="100"
        android:progress="20"
        android:paddingStart="60dp"
        android:paddingEnd="75dp" />



    <TextView
        android:id="@+id/userINfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Information about user" />










    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="5dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/iv_user_avatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>
